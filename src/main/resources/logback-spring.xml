<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true" scanPeriod="30 seconds">

    <!-- Propiedades comunes -->
    <property name="LOG_PATH" value="${LOG_PATH:-logs}"/>
    <property name="APP_NAME" value="clinic-admin-api"/>

    <!-- Patrón para desarrollo (legible) -->
    <property name="DEV_PATTERN"
              value="%d{yyyy-MM-dd HH:mm:ss.SSS} %highlight(%-5level) [%thread] %cyan(%logger{36}) - %msg%n"/>

    <!-- Patrón para archivos (sin colores) -->
    <property name="FILE_PATTERN"
              value="%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level [%thread] %logger{36} - %msg%n"/>

    <!-- ==================== PERFIL: DESARROLLO ==================== -->
    <springProfile name="dev,default">
        <!-- Console con colores para desarrollo -->
        <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
            <encoder>
                <pattern>${DEV_PATTERN}</pattern>
                <charset>UTF-8</charset>
            </encoder>
        </appender>

        <!-- Archivo de logs para desarrollo -->
        <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
            <file>${LOG_PATH}/clinic-admin-dev.log</file>
            <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
                <fileNamePattern>${LOG_PATH}/clinic-admin-dev.%d{yyyy-MM-dd}.log</fileNamePattern>
                <maxHistory>7</maxHistory>
                <totalSizeCap>100MB</totalSizeCap>
            </rollingPolicy>
            <encoder>
                <pattern>${FILE_PATTERN}</pattern>
                <charset>UTF-8</charset>
            </encoder>
        </appender>

        <!-- Niveles de logging para desarrollo -->
        <logger name="com.clinica.mentalhealth" level="DEBUG"/>
        <logger name="org.springframework.r2dbc" level="DEBUG"/>
        <logger name="org.springframework.data.r2dbc" level="DEBUG"/>
        <logger name="org.springframework.security" level="DEBUG"/>
        <logger name="io.r2dbc.postgresql" level="DEBUG"/>

        <!-- Reducir ruido de librerías -->
        <logger name="org.springframework.boot.autoconfigure" level="WARN"/>
        <logger name="org.hibernate" level="WARN"/>
        <logger name="io.netty" level="WARN"/>
        <logger name="reactor.netty" level="INFO"/>

        <root level="INFO">
            <appender-ref ref="CONSOLE"/>
            <appender-ref ref="FILE"/>
        </root>
    </springProfile>

    <!-- ==================== PERFIL: PRODUCCIÓN ==================== -->
    <springProfile name="prod">
        <!-- Console JSON para agregadores (ELK, CloudWatch, etc.) -->
        <appender name="CONSOLE_JSON" class="ch.qos.logback.core.ConsoleAppender">
            <encoder class="ch.qos.logback.core.encoder.LayoutWrappingEncoder">
                <layout class="ch.qos.logback.contrib.json.classic.JsonLayout">
                    <jsonFormatter class="ch.qos.logback.contrib.jackson.JacksonJsonFormatter">
                        <prettyPrint>false</prettyPrint>
                    </jsonFormatter>
                    <timestampFormat>yyyy-MM-dd'T'HH:mm:ss.SSSXXX</timestampFormat>
                    <timestampFormatTimezoneId>America/Lima</timestampFormatTimezoneId>
                    <appendLineSeparator>true</appendLineSeparator>
                </layout>
            </encoder>
        </appender>

        <!-- Archivo JSON rotativo para producción -->
        <appender name="FILE_JSON" class="ch.qos.logback.core.rolling.RollingFileAppender">
            <file>${LOG_PATH}/clinic-admin.json</file>
            <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
                <fileNamePattern>${LOG_PATH}/clinic-admin.%d{yyyy-MM-dd}.%i.json.gz</fileNamePattern>
                <maxFileSize>50MB</maxFileSize>
                <maxHistory>30</maxHistory>
                <totalSizeCap>1GB</totalSizeCap>
            </rollingPolicy>
            <encoder class="ch.qos.logback.core.encoder.LayoutWrappingEncoder">
                <layout class="ch.qos.logback.contrib.json.classic.JsonLayout">
                    <jsonFormatter class="ch.qos.logback.contrib.jackson.JacksonJsonFormatter">
                        <prettyPrint>false</prettyPrint>
                    </jsonFormatter>
                    <timestampFormat>yyyy-MM-dd'T'HH:mm:ss.SSSXXX</timestampFormat>
                    <timestampFormatTimezoneId>America/Lima</timestampFormatTimezoneId>
                    <appendLineSeparator>true</appendLineSeparator>
                </layout>
            </encoder>
        </appender>

        <!-- Archivo de errores separado para alertas -->
        <appender name="ERROR_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
            <file>${LOG_PATH}/clinic-admin-error.json</file>
            <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
                <level>ERROR</level>
            </filter>
            <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
                <fileNamePattern>${LOG_PATH}/clinic-admin-error.%d{yyyy-MM-dd}.%i.json.gz</fileNamePattern>
                <maxFileSize>20MB</maxFileSize>
                <maxHistory>90</maxHistory>
                <totalSizeCap>500MB</totalSizeCap>
            </rollingPolicy>
            <encoder class="ch.qos.logback.core.encoder.LayoutWrappingEncoder">
                <layout class="ch.qos.logback.contrib.json.classic.JsonLayout">
                    <jsonFormatter class="ch.qos.logback.contrib.jackson.JacksonJsonFormatter">
                        <prettyPrint>false</prettyPrint>
                    </jsonFormatter>
                    <timestampFormat>yyyy-MM-dd'T'HH:mm:ss.SSSXXX</timestampFormat>
                    <timestampFormatTimezoneId>America/Lima</timestampFormatTimezoneId>
                    <appendLineSeparator>true</appendLineSeparator>
                </layout>
            </encoder>
        </appender>

        <!-- Appender asíncrono para mejor rendimiento -->
        <appender name="ASYNC_FILE" class="ch.qos.logback.classic.AsyncAppender">
            <queueSize>512</queueSize>
            <discardingThreshold>0</discardingThreshold>
            <includeCallerData>false</includeCallerData>
            <appender-ref ref="FILE_JSON"/>
        </appender>

        <appender name="ASYNC_ERROR" class="ch.qos.logback.classic.AsyncAppender">
            <queueSize>256</queueSize>
            <discardingThreshold>0</discardingThreshold>
            <includeCallerData>true</includeCallerData>
            <appender-ref ref="ERROR_FILE"/>
        </appender>

        <!-- Niveles de logging para producción (mínimo ruido) -->
        <logger name="com.clinica.mentalhealth" level="INFO"/>
        <logger name="org.springframework" level="WARN"/>
        <logger name="org.springframework.security" level="ERROR"/>
        <logger name="org.springframework.r2dbc" level="WARN"/>
        <logger name="io.r2dbc" level="WARN"/>
        <logger name="io.netty" level="WARN"/>
        <logger name="reactor" level="WARN"/>

        <!-- Silenciar logs innecesarios -->
        <logger name="org.hibernate" level="ERROR"/>
        <logger name="com.zaxxer.hikari" level="WARN"/>

        <root level="INFO">
            <appender-ref ref="CONSOLE_JSON"/>
            <appender-ref ref="ASYNC_FILE"/>
            <appender-ref ref="ASYNC_ERROR"/>
        </root>
    </springProfile>

    <!-- ==================== PERFIL: TEST ==================== -->
    <springProfile name="test">
        <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
            <encoder>
                <pattern>%d{HH:mm:ss.SSS} %-5level %logger{36} - %msg%n</pattern>
            </encoder>
        </appender>

        <!-- Silenciar casi todo en tests -->
        <logger name="com.clinica.mentalhealth" level="WARN"/>
        <logger name="org.springframework" level="WARN"/>
        <logger name="org.testcontainers" level="INFO"/>

        <root level="WARN">
            <appender-ref ref="CONSOLE"/>
        </root>
    </springProfile>

</configuration>
